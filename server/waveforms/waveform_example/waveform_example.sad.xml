  <usesdevicedependencies>
    <usesdevice id="rtl_connection">
		<!-- High-level notes:
		     1) These translate to allocation calls on the Device to set it up.
		     2) The allocation_id must match the connectinterface id for this connection (above)
		     3) The tuner_type must be RX_DIGITIZER (only type supported with rtl_sdr_device)
		     4) The group_id must match the group_id_global assigned in the Node's declaration.
		     5) The RTL driver has no bandwidth property; it's really related to the sample rate.
		        It's populated here only to satisfy frequency validation.
		     6) The rf_flow_id must match the value in FRONTEND::tuner_status at the time of allocation.  -->
		<!-- Use FRONTEND::tuner_allocation::?? to initially configure the device matched.  At least one 
		     component must allocate device_control before listeners can allocate against it. -->
		<!-- Use FRONTEND::listener_allocation::?? to establish a pure listener relationship. -->
		<structref refid="FRONTEND::tuner_allocation">
		  <simpleref refid="FRONTEND::tuner_allocation::tuner_type" value="RX_DIGITIZER"/> 
		  <simpleref refid="FRONTEND::tuner_allocation::allocation_id" value="rtl_connection_1"/>
          <simpleref refid="FRONTEND::tuner_allocation::device_control" value="true"/> 
          <simpleref refid="FRONTEND::tuner_allocation::gain" value="0"/> 
          <simpleref refid="rtl_device::allocation::agc_mode" value="true"/>
          <simpleref refid="FRONTEND::tuner_allocation::frequency_correction" value="47"/> 
		  <simpleref refid="FRONTEND::tuner_allocation::center_frequency" value="97500000"/>
		  <simpleref refid="FRONTEND::tuner_allocation::sample_rate" value="256000"/>
		  <simpleref refid="FRONTEND::tuner_allocation::bandwidth" value="125000"/>
		  <simpleref refid="FRONTEND::tuner_allocation::group_id" value="rtls"/>
		  <simpleref refid="FRONTEND::tuner_allocation::rf_flow_id" value=""/>
		</structref>
    </usesdevice>
  </usesdevicedependencies>
